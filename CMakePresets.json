{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25
  },
  "configurePresets": [
    {
      "name": "msvc_x64_vcpkg",
      "displayName": "MSVC with vcpkg on x64",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/extern/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_OVERLAY_PORTS": "${sourceDir}/extern/vcpkg-overlays"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build_msvc",
      "displayName": "Build (msvc)",
      "configurePreset": "msvc_x64_vcpkg",
      "configuration": "Debug",
      "targets": [
        "ALL_BUILD"
      ],
      "jobs": 12,
      "cleanFirst": false
    }
  ]
}
